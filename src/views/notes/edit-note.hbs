<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
            <div class="cardbody">
                <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" value="{{note.title}}">
                    </div>
                    <div class="form-group">
                        <textarea name="description" rows="10" class="form-control">{{note.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>